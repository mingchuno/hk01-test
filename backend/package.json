{
  "name": "payment-demo",
  "version": "0.1.0",
  "private": true,
  "engines": {
    "node": ">=8.0.0",
    "npm": ">=5.0.0"
  },
  "scripts": {
    "prestart": "npm run -s build",
    "start": "node dist/index.js",
    "dev": "nodemon src/index.js --exec \"node -r babel-register\"",
    "clean": "rm -rf dist/",
    "build": "npm run clean && babel src -s -d dist",
    "test": "jest --coverage --forceExit",
    "lint": "eslint src test --fix"
  },
  "dependencies": {
    "body-parser": "~1.19.0",
    "card-validator": "^6.2.0",
    "compression": "^1.7.2",
    "cors": "^2.8.4",
    "debug": "~4.1.1",
    "dotenv": "^8.0.0",
    "express": "~4.17.1",
    "express-validator": "^5.0.1",
    "helmet": "^3.11.0",
    "lodash": "^4.17.5",
    "mongodb": "^3.0.3",
    "redis": "^2.8.0",
    "stripe": "^7.1.0",
    "winston": "^3.0.0-rc1"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-eslint": "^10.0.1",
    "babel-jest": "^24.8.0",
    "babel-preset-flow": "^6.23.0",
    "babel-register": "^6.26.0",
    "eslint": "^5.16.0",
    "eslint-config-google": "^0.13.0",
    "eslint-plugin-flowtype": "^3.10.3",
    "flow-bin": "^0.101.0",
    "jest": "^24.8.0",
    "nodemon": "^1.15.1",
    "supertest": "^4.0.2",
    "uuid": "^3.2.1"
  },
  "jest": {
    "verbose": true,
    "collectCoverageFrom": [
      "**/src/**/*.js"
    ],
    "coverageDirectory": "./coverage",
    "coverageReporters": [
      "json",
      "lcov",
      "text"
    ]
  },
  "license": "MIT",
  "description": "payment demo frontend and backend using vuejs & nodejs"
}
